   	<!-- Header -->
   	<header id="header" class="header">
	   	<div class="top-wrap">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
		        <div id="logo" class="logo">
							<a href="./" rel="home" title="home">
								<%= image_tag("admin-logo.png", :alt => "homeoagora") %>
							</a>
		        </div>
						<div class="follow-us">
							<div class="follow-title">
								<%= t(:languages) %>
							</div>
							<ul class="social-links">
								<li><%= link_to t(:english), admin_root_path(locale: :en) %></li>
								<li><%= link_to t(:spanish), admin_root_path(locale: :es) %></li>
							</ul>
						</div>
		      </div><!-- /.col-md-6 -->
		      <div class="col-md-6">
		        <div class="btn-menu"></div><!-- //mobile menu button -->
		          <div class="member-area">
							  <div class="member">
		            	<div class="welcome">
										<%= t(:welcome) %> <span class="name"><%= current_user.name %></span>
										<div class="member-options">
											<div class="avatar">
												<div class="thumb">
													<%= image_tag current_user.avatar.url(:small), class: "img-circle"	%>
												</div>
												<span class="fullname"><%= current_user.name %></span>
											</div>
											<ul class="options">
                        <%= render 'shared/user_modal_navigation' %>
											</ul>
											<li><%= link_to t(:sign_out) , destroy_user_session_path, :class => "button" %></li>
			            	</div>
		            	</div>
								</div>	
		          </div>
		      </div><!-- /.col-md-6 -->
	      </div><!-- /.row -->
	    </div><!-- /.container -->
	  </div><!-- /.top-wrap -->
	</header>
