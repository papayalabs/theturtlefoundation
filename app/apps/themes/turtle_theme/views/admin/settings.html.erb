<!-- This page is viewed on admin->settings->site settings->tab theme -->
<!-- You can add your custom html contents here, but dont forget to save the values with hook on_theme_settings -->
<div class="form-group">
    <%= label_tag 'Email info' %>
    <%= text_field_tag 'theme_option[email_info]', current_theme.get_option('email_info'), class: 'form-control' %>
</div>

<div class="form-group">
    <%= label_tag 'Phone' %>
    <%= text_field_tag 'theme_option[phone_info]', current_theme.get_option('phone_info'), class: 'form-control' %>
</div>

<div class="form-group">
    <%= label_tag 'Address' %>
    <%= text_field_tag 'theme_option[address_info]', current_theme.get_option('address_info'), class: 'form-control' %>
</div>

<div class="form-group">
    <%= label_tag nil, 'Map Location (Iframe)' %> <br><small>Sample: <code>https://maps.google.com/maps?q=Lecheria&t=&z=13&ie=UTF8&iwloc=&output=embed</code></small>
    <%= text_field_tag 'theme_option[map_url]', current_theme.get_option('map_url'), class: 'form-control' %>
</div>