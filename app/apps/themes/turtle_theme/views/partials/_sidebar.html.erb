<div class="blog_right_sidebar">
    <aside class="single_sidebar_widget search_widget">
        <%= render partial: 'partials/search_form' %>
    </aside>
    <aside class="single_sidebar_widget post_category_widget">
        <h4 class="widget_title" style="color: #2d2d2d;"><%= current_theme.the_field('common_word_categories', 'Categories') %></h4>
        <ul class="list cat-list">
            <% current_site.the_categories.decorate.each do |item| %>
            <li>
                <a href="<%= item.the_url %>" class="d-flex">
                <p><%= item.the_title %></p>
                </a>
            </li>
            <% end %>
        </ul>
    </aside>
    <aside class="single_sidebar_widget popular_post_widget">
        <h3 class="widget_title" style="color: #2d2d2d;"><%= current_theme.the_field('common_word_recents', 'Recents') %></h3>
        <% current_site.the_posts('post').decorate.take(4).each.to_a.each do |post| %>
            <div class="media post_item">
                <img src="<%= post.the_thumb_url(theme_asset_url('img/blog/single_blog_1.png')) %>" width="64" height="64" alt="post">
                <div class="media-body">
                    <a href="<%= post.the_url %>"</a>
                        <h3 style="color: #2d2d2d;"><%= post.the_title %></h3>
                    </a>
                    <% months = ["Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"] %>
                    <% day =  DateTime.parse(post.the_field('post-date', '').to_s+" 12:00AM").day %>
                    <% month = months[DateTime.parse(post.the_field('post-date', '').to_s+" 12:00AM").month.to_i - 1] %>
                    <% year = DateTime.parse(post.the_field('post-date', '').to_s+" 12:00AM").year %>
                    <p><%= month+','+day.to_s+' '+year.to_s %></p>
                </div>
            </div>
        <% end %>
    </aside>
    <aside class="single_sidebar_widget tag_cloud_widget">
        <h4 class="widget_title" style="color: #2d2d2d;"><%= current_theme.the_field('common_word_tags', 'Tags') %></h4>
        <ul class="list">
            <% current_site.the_tags.decorate.each do |post_tag| %>
                <a class="btn btn-default btn-xs" href="<%= post_tag.the_url %>"><%= post_tag.the_title %></a>
            <% end %>
        </ul>
    </aside>

