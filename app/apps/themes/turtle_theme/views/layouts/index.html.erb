<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title><%= current_site.name %></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href=<%= theme_asset_path("favicon.ico") %>>
    <%= stylesheet_link_tag theme_asset_path("css/main.css") %>

</head>
<body>
    <!-- ? Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src=<%= theme_asset_url('img/logo/loader.png') %> alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader Start -->
    <header>
        <!-- Header Start -->
        <%= render theme_view('layouts/header') %>
        <!-- Header End -->
    </header>
    <main>
        <%= yield %>
    </main>

    </div>
    <footer>
      <%= render theme_view('layouts/footer') %>
    </footer>
      <!-- Scroll Up -->
      <div id="back-top" >
        <a title="Go to Top" href="#"> <i class="fas fa-level-up-alt"></i></a>
    </div>

    <!-- JS here -->

    <%= javascript_include_tag theme_asset_path("js/main.js") %>
    
</body>
</html>